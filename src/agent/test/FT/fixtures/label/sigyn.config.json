{
  "loki": {
    "apiUrl": "http://localhost:3100"
  },
  "notifiers": {
    "slack": {
      "notifier": "slack",
      "webhookUrl": "https://hooks.slack.com/services/aaa/bbb"
    },
    "discord": {
      "notifier": "discord",
      "webhookUrl": "https://discord.com/api/webhooks/aaa/bbb"
    }
  },
  "rules": [
    {
      "name": "State KO >= 80%",
      "logql": "{app=\"sigyn\"} |~ `state: (ok|ko)` | regexp `state: (?P<state>ok|ko)`",
      "polling": "200ms",
      "alert": {
        "on": {
          "label": "state",
          "value": "ko",
          "percentThreshold": 80,
          "minimumLabelCount": 10
        },
        "template": {
          "title": "Alert"
        }
      }
    }
  ]
}
