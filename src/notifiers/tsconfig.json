{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "./src",
    "typeRoots": [
      "../../node_modules/@types",
      "../config/dist"
    ],
    "types": ["node"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
